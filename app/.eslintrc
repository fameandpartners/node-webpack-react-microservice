{
  "extends": [
    "airbnb",
  ],
  "env": {
    "jest": true
  },
  "rules": {
    # These are overwritten rules that have been annoying
    "react/jsx-filename-extension": [0],
    "react/no-unescaped-entities": [0],
    "no-return-assign": [0],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "class-methods-use-this": [0],
    # This below does not work as expected with addition of role
    "jsx-a11y/no-static-element-interactions": [0],
    "react/sort-comp": [1, {
      order: [
        "constructor",
        "static-methods",
        "everything-else",
        "lifecycle",
        "render"
      ],
    }]
  }
}
